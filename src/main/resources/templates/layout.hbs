    <style>
@import url("https://fonts.googleapis.com/css?family=Fascinate+Inline|Dosis|Kalam|Orbitron&display=swap");
@import "font-awesome";
body {
 background-color: #597C2B;
 background-image:linear-gradient(
       rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
       url("./images/bird.png");
       background-repeat: no-repeat;
       background-attachment: fixed;
       background-position: right;
       text-align:center;
}

footer {

    text-align:center;
    bottom:0;
}
form {
    background-repeat:no-repeat;
    background-size:cover;
    margin-left:75%;
    border-radius:3px;
    color:black;
    width:60%;
    height:50%;
}
h1{
    padding-top: 4em;
    color:black;
    text-align:center;
    font-family: 'Orbitron', sans-serif;
}

.layback{
    background-color: #3D1518;
}
nav{
  position: absolute;
  top: 20px;
  right: 12%;
  font-family: 'Dosis', sans-serif;
  color: #EDEEF0;

}
nav>ul li{
  display: inline-block;
  padding: 10px 30px;
  font-size: 1.5em;
  color: #EDEEF0;
  cursor: pointer;
}
img {
background-size: cover;
background-repeat: no-repeat;
float:left;
}
a {
  position: relative;
  text-decoration: none !important;
  line-height: 24px;
  color: #EDEEF0;
}

a :hover {
    color: #3D1518;
}
a :visited {
  color: #EDEEF0;
}

a:before, a:after {
  content: '';
  position: absolute;
  transition: transform .5s ease;

}
.hover-1 {
  padding-top: 10px;
}
.hover-1:before {
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2px;
  background: #3D1518;
  transform: scaleX(0);
}
.hover-1:hover:before {
  transform: scaleX(1);
}

.image {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 60vh;
  width: 20vh;
}
</style>
