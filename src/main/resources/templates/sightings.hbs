{{#partial "content"}}
    <style>
    body {
    padding-top: 5%;

 background-image: linear-gradient(-60deg, #16a085 0%, #f4d03f 100%);
    text-align:center;
    }
   </style>
    {{if sight}}
    {{#each sight }}
        <div class="container">
            <div class="jumbotron" style="background-color:black; opacity:0.5; color: #ffff; margin-bottom: 2%; padding-top: 5%;">
                <h3>Sightings</h3>
                <p>AnimalName: {{animalName}}</p>
                <p>Location : {{sightLocation}}</p>
                <p>Ranger Name : {{ranger}}</p>
                <p>Spotted Time : {{spotted}} </p>
            </div>
        </div>
    {{/each}}
{{else}}
{{/partial}}
{{>layout.hbs}}